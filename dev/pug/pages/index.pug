extends ../layouts/main

block variables
  -var title = 'Главная страница'


block content
  .main-wrapper
    .main
      img(src='static/img/common/logo.svg' alt='logo').logo
      .title
        span.title__first WE'RE
        span COMING <br> SOON
      p Hello fellow shoppers! We're currently building our new fashion store. Add your email below to stay up-to-date with announcements and our launch deals.
      form(novalidate)
        label
         input(type="email" placeholder="Email Address").error
         img(src='static/img/common/icon-error.svg' alt="icon").error-icon
         span.error-text Please provide a valid email
        button(type="submit")
          img(src="static/img/common/icon-arrow.svg" alt="icon")
  .photo
